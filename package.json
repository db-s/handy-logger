{
  "name": "handy-logger",
  "version": "1.1.2",
  "description": "An easy log handler for Node.js applications",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "jest --config jestconfig.json --coverage",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tsc --noEmit && eslint 'src/**/*.ts' --quiet --fix",
    "build": "npm run lint && tsc",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/db-s/handy-logger.git"
  },
  "keywords": [
    "log",
    "logger"
  ],
  "author": "db-s",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/db-s/handy-logger/issues"
  },
  "homepage": "https://github.com/db-s/handy-logger#readme",
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "@types/node": "^18.14.1",
    "@types/shelljs": "^0.8.11",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "^29.4.3",
    "lint-staged": "^13.1.2",
    "prettier": "^2.8.4",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "logform": "git+https://github.com/winstonjs/logform.git",
    "shelljs": "^0.8.5",
    "winston": "^3.8.2",
    "winston-daily-rotate-file": "^4.7.1",
    "winston-transport": "^4.5.0"
  },
  "files": [
    "lib/**/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "tsc --noEmit && lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
