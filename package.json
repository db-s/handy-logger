{
  "name": "easy-logger",
  "version": "1.0.0",
  "description": "An easy log handler for Node.js",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "jest --config jestconfig.json",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/db-s/easy-logger.git"
  },
  "keywords": [
    "log",
    "logger"
  ],
  "author": "db-s",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/db-s/easy-logger/issues"
  },
  "homepage": "https://github.com/db-s/easy-logger#readme",
  "devDependencies": {
    "@types/jest": "^24.9.0",
    "@types/node": "^13.1.8",
    "@types/shelljs": "^0.8.6",
    "jest": "^25.1.0",
    "prettier": "^1.19.1",
    "ts-jest": "^24.3.0",
    "tslint": "^6.0.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.7.5"
  },
  "files": [
    "lib/**/*"
  ],
  "dependencies": {
    "logform": "^2.1.2",
    "shelljs": "^0.8.3",
    "winston": "^3.2.1",
    "winston-daily-rotate-file": "^4.4.2",
    "winston-transport": "^4.3.0"
  }
}
